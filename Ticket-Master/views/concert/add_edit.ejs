<%- include ("../partials/header.ejs"); %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 style="margin-top: 1em;"><%= title %></h1>
                
            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= Concert._id %>"
                    >
                    <label style="margin-bottom: 0.5em"  for="concertTextField">Concert Name</label>
                    <input style="margin-bottom: 1em"  type="text" class="form-control"
                        id="ConcertTextField"
                        placeholder="Enter the Name of the Concert"
                        name="name" 
                        value="<%= Concert.name %>"
                        required>
                </div>

                <div class="form-group">
                    <label style="margin-bottom: 0.5em"  for="stateTextField">Current state</label>
                    <input style="margin-bottom: 1em"  type="text" 
                    class="form-control"
                    id="stateTextField"
                    placeholder="Enter Concert state"
                    name="state" 
                    value="<%= Concert.state %>"
                    required>
                </div>

                <div class="form-group">
                    <label style="margin-bottom: 0.5em"  for="priceTextField">Price per ticket</label>
                    <input style="margin-bottom: 1em"  type="number" 
                    step="0.01"
                    class="form-control"
                    id="priceTextField"
                    placeholder="Enter the price per ticket"
                    name="price" 
                    value="<%= Concert.price %>"
                    required>
                </div>

                
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                
                </button>
                
                <a href="/concert/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>
                </form>
            </div>

    </div>
</div>



<%- include ("../partials/footer.ejs"); %>
